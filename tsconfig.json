{
  "compilerOptions": {
    "outDir": "./src/main/resources/static/js",
    "rootDir": "./src/main/resources/static/ts",
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "node",     
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/main/resources/static/ts/**/*.ts"],
  "exclude": ["target/**/*"] 
}
